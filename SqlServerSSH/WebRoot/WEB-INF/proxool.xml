<?xml version="1.0" encoding="UTF-8"?>
<something-else-entirely>
	<proxool>
		<!-- 配置proxool别名 -->
		<alias>sqlserver</alias>

		<!-- 配置连接的数据库信息 -->
		<driver-url>jdbc:jtds:sqlserver://localhost:1433;databaseName=msg_board_db;
		</driver-url>
		<driver-class>net.sourceforge.jtds.jdbc.Driver</driver-class>
		<driver-properties>
			<property name="user" value="sa" />
			<property name="password" value="root" />
		</driver-properties>
		<!-- proxool自动侦查各个连接状态的时间间隔（毫秒），侦查到空闲的连接就马上 回收，超时的销毁 -->
		<house-keeping-sleep-time>900000</house-keeping-sleep-time>
		<!-- 最大连接数 -->
		<maximum-connection-count>10</maximum-connection-count>
		<!-- 最小连接数 -->
		<minimum-connection-count>3</minimum-connection-count>
		<!-- 连接池中可用的连接数量.如果当前的连接池中的连接少于这个数值.新的连接将被建立 -->
		<prototype-count>3</prototype-count>
		<!-- 可一次建立的最大连接数。那就是新增的连接请求,但还没有可供使用的连接，默认为10 -->
		<simultaneous-build-throttle>3</simultaneous-build-throttle>
		<!-- 日志统计跟踪类型。参数“ERROR”或 “INFO” -->
		<statistics-log-level>INFO</statistics-log-level>
		<!-- 自动重连 -->
		<house-keeping-test-sql>select GETDATE()</house-keeping-test-sql>
	</proxool>

